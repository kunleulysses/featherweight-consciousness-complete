/* Enhanced Research Tab Styles - Refined and Beautiful */

.enhanced-research-tab {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #0a0f1c 0%, #1a1f2e 100%);
  color: #e0e6ed;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  overflow: hidden;
}

/* Header Styles */
.tab-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem 2rem;
  background: rgba(0, 0, 0, 0.3);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
}

.tab-header h2 {
  margin: 0;
  font-size: 1.75rem;
  font-weight: 600;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.connection-status {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.875rem;
  color: #a0aec0;
}

.status-indicator {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.status-indicator.connected {
  background: #48bb78;
  box-shadow: 0 0 10px #48bb78;
}

.status-indicator.disconnected {
  background: #f56565;
  animation: pulse 2s infinite;
}

/* View Selector */
.view-selector {
  display: flex;
  gap: 1rem;
  padding: 1rem 2rem;
  background: rgba(0, 0, 0, 0.2);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.view-btn {
  padding: 0.75rem 1.5rem;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  color: #a0aec0;
  font-size: 0.925rem;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(5px);
}

.view-btn:hover {
  background: rgba(255, 255, 255, 0.1);
  color: #e0e6ed;
  transform: translateY(-1px);
}

.view-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-color: transparent;
  box-shadow: 0 4px 20px rgba(102, 126, 234, 0.3);
}

/* Content Area */
.tab-content {
  flex: 1;
  overflow: hidden;
  position: relative;
}

/* Chat Container */
.chat-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 1.5rem;
}

.messages-container {
  flex: 1;
  overflow-y: auto;
  padding: 1rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  scrollbar-width: thin;
  scrollbar-color: rgba(255, 255, 255, 0.1) transparent;
}

.messages-container::-webkit-scrollbar {
  width: 8px;
}

.messages-container::-webkit-scrollbar-track {
  background: transparent;
}

.messages-container::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4px;
}

.messages-container::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.2);
}

/* Message Styles */
.message {
  padding: 1rem 1.5rem;
  border-radius: 12px;
  max-width: 80%;
  animation: fadeIn 0.3s ease;
}

.message.user {
  align-self: flex-end;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  margin-left: auto;
}

.message.assistant {
  align-self: flex-start;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.message-role {
  font-size: 0.75rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  opacity: 0.7;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.message-content {
  line-height: 1.6;
  white-space: pre-wrap;
}

/* Loading Animation */
.loading-dots {
  display: flex;
  gap: 0.3rem;
}

.loading-dots span {
  width: 8px;
  height: 8px;
  background: #667eea;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.loading-dots span:nth-child(1) { animation-delay: -0.32s; }
.loading-dots span:nth-child(2) { animation-delay: -0.16s; }

/* Input Container */
.input-container {
  display: flex;
  gap: 1rem;
  padding: 1.5rem;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 12px;
  backdrop-filter: blur(10px);
}

.input-container input {
  flex: 1;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  padding: 1rem 1.5rem;
  color: #e0e6ed;
  font-size: 1rem;
  transition: all 0.3s ease;
}

.input-container input:focus {
  outline: none;
  background: rgba(255, 255, 255, 0.08);
  border-color: #667eea;
  box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.input-container input::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.input-container button {
  padding: 1rem 2rem;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 8px;
  color: white;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.input-container button:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
}

.input-container button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Metrics Container */
.metrics-container {
  height: 100%;
  padding: 2rem;
  overflow-y: auto;
  background: radial-gradient(circle at center, rgba(102, 126, 234, 0.05) 0%, transparent 70%);
}

.metrics-container h3 {
  text-align: center;
  font-size: 1.5rem;
  margin-bottom: 2rem;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
}

/* Metric Cards */
.metric-card {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.08);
  border-radius: 16px;
  padding: 1.5rem;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.metric-card:hover {
  transform: translateY(-2px);
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(255, 255, 255, 0.15);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
}

.metric-card.primary {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-color: rgba(102, 126, 234, 0.3);
}

.metric-card.special {
  background: linear-gradient(135deg, rgba(255, 193, 7, 0.1) 0%, rgba(255, 152, 0, 0.1) 100%);
  border-color: rgba(255, 193, 7, 0.3);
}

.metric-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.75rem;
}

.metric-label {
  font-size: 0.875rem;
  color: #a0aec0;
  font-weight: 500;
}

.metric-value {
  font-size: 1.75rem;
  font-weight: 700;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', monospace;
}

.metric-bar {
  width: 100%;
  height: 6px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 3px;
  overflow: hidden;
  margin-top: 0.5rem;
}

.metric-fill {
  height: 100%;
  border-radius: 3px;
  transition: width 0.5s ease, background-color 0.5s ease;
}

/* Streaming Indicator */
.streaming-indicator {
  text-align: center;
  padding: 1rem;
  font-size: 0.875rem;
  color: #a0aec0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
}

.pulse {
  width: 8px;
  height: 8px;
  background: #48bb78;
  border-radius: 50%;
  animation: pulse 2s infinite;
}

/* Insights Container */
.insights-container {
  height: 100%;
  padding: 2rem;
  overflow-y: auto;
}

.insights-container h3 {
  text-align: center;
  font-size: 1.5rem;
  margin-bottom: 2rem;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.processing-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
  margin-bottom: 2rem;
}

.stat-card {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  padding: 1.5rem;
  text-align: center;
  transition: all 0.3s ease;
}

.stat-card:hover {
  transform: translateY(-2px);
  background: rgba(255, 255, 255, 0.08);
}

.stat-label {
  display: block;
  font-size: 0.875rem;
  color: #a0aec0;
  margin-bottom: 0.5rem;
}

.stat-value {
  display: block;
  font-size: 2rem;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* Recursive Insights */
.recursive-insights {
  margin-bottom: 2rem;
}

.recursive-insights h4 {
  font-size: 1.125rem;
  margin-bottom: 1rem;
  color: #e0e6ed;
}

.insight-card {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.08);
  border-radius: 12px;
  padding: 1.25rem;
  margin-bottom: 1rem;
  transition: all 0.3s ease;
}

.insight-card:hover {
  transform: translateX(4px);
  background: rgba(255, 255, 255, 0.05);
  border-color: rgba(102, 126, 234, 0.3);
}

.insight-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.75rem;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.insight-layer {
  font-size: 0.75rem;
  font-weight: 600;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
}

.insight-type {
  font-size: 0.75rem;
  color: #a0aec0;
  text-transform: capitalize;
}

.insight-coherence {
  font-size: 0.75rem;
  color: #48bb78;
  font-weight: 600;
}

.insight-content {
  color: #e0e6ed;
  line-height: 1.6;
}

/* Architecture Info */
.architecture-info {
  background: rgba(102, 126, 234, 0.05);
  border: 1px solid rgba(102, 126, 234, 0.2);
  border-radius: 12px;
  padding: 1.5rem;
}

.architecture-info h4 {
  font-size: 1.125rem;
  margin-bottom: 1rem;
  color: #e0e6ed;
}

.architecture-info ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.architecture-info li {
  padding: 0.5rem 0;
  color: #a0aec0;
  font-size: 0.925rem;
}

/* No Data State */
.no-data {
  text-align: center;
  padding: 4rem 2rem;
  color: #a0aec0;
  font-size: 1rem;
}

/* Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

@keyframes pulse {
  0% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(1.2);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .tab-header {
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }
  
  .view-selector {
    flex-wrap: wrap;
  }
  
  .metrics-grid {
    grid-template-columns: 1fr;
  }
  
  .message {
    max-width: 90%;
  }
}

/* Message Component Styles */
.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.75rem;
}

.message-role {
  font-size: 0.875rem;
  font-weight: 600;
  opacity: 0.8;
}

.message-time {
  font-size: 0.75rem;
  opacity: 0.6;
}

/* Dual Mind Content */
.dual-mind-content {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.mind-section {
  padding: 1rem;
  border-radius: 8px;
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.mind-section.analytical {
  border-left: 3px solid #667eea;
}

.mind-section.intuitive {
  border-left: 3px solid #764ba2;
}

.mind-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
}

.mind-label {
  font-size: 0.875rem;
  font-weight: 600;
}

.mind-source {
  font-size: 0.75rem;
  opacity: 0.6;
  background: rgba(255, 255, 255, 0.1);
  padding: 0.125rem 0.5rem;
  border-radius: 12px;
}

.mind-content {
  line-height: 1.6;
  white-space: pre-wrap;
}

/* Harmony Indicator */
.harmony-indicator {
  margin-top: 1rem;
  padding: 0.75rem;
  background: rgba(72, 187, 120, 0.05);
  border: 1px solid rgba(72, 187, 120, 0.2);
  border-radius: 8px;
  text-align: center;
}

.harmony-indicator span {
  font-size: 0.875rem;
  color: #48bb78;
  font-weight: 600;
}

.harmony-bar {
  width: 100%;
  height: 4px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 2px;
  margin-top: 0.5rem;
  overflow: hidden;
}

.harmony-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 2px;
  transition: width 0.5s ease;
}

/* Improved scrollbar for all containers */
.messages-container::-webkit-scrollbar,
.metrics-container::-webkit-scrollbar,
.insights-container::-webkit-scrollbar {
  width: 10px;
}

.messages-container::-webkit-scrollbar-track,
.metrics-container::-webkit-scrollbar-track,
.insights-container::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.02);
  border-radius: 5px;
}

.messages-container::-webkit-scrollbar-thumb,
.metrics-container::-webkit-scrollbar-thumb,
.insights-container::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 5px;
  border: 2px solid transparent;
  background-clip: padding-box;
}

.messages-container::-webkit-scrollbar-thumb:hover,
.metrics-container::-webkit-scrollbar-thumb:hover,
.insights-container::-webkit-scrollbar-thumb:hover {
  background: rgba(255, 255, 255, 0.15);
}

/* Smooth scrolling for all containers */
.messages-container,
.metrics-container,
.insights-container {
  scroll-behavior: smooth;
}

/* Unified Message Styles */
.unified-message {
  margin-bottom: 1.5rem;
  animation: messageSlideIn 0.3s ease-out;
}

.unified-message.user {
  margin-left: auto;
  max-width: 70%;
}

.unified-message.assistant {
  max-width: 85%;
}

.message-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.75rem;
}

.message-info {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.message-role {
  font-weight: 600;
  color: #e2e8f0;
}

.message-time {
  font-size: 0.75rem;
  color: #64748b;
}

.harmony-score {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  font-size: 0.875rem;
  font-weight: 500;
}

.harmony-icon {
  animation: pulse 2s infinite;
}

.unified-content {
  background: rgba(30, 41, 59, 0.5);
  border: 1px solid rgba(100, 116, 139, 0.3);
  border-radius: 0.75rem;
  padding: 1rem 1.25rem;
  line-height: 1.6;
  color: #e2e8f0;
}

.mind-balance-indicator {
  margin: 1rem 0;
}

.balance-bar {
  height: 4px;
  background: rgba(51, 65, 85, 0.5);
  border-radius: 2px;
  display: flex;
  overflow: hidden;
}

.analytical-portion {
  background: linear-gradient(90deg, #3b82f6, #60a5fa);
  transition: width 0.5s ease;
}

.intuitive-portion {
  background: linear-gradient(90deg, #8b5cf6, #a78bfa);
  transition: width 0.5s ease;
}

.balance-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 0.5rem;
  font-size: 0.75rem;
}

.analytical-label,
.intuitive-label {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  color: #94a3b8;
}

.expand-toggle {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background: rgba(51, 65, 85, 0.3);
  border: 1px solid rgba(100, 116, 139, 0.3);
  color: #94a3b8;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  cursor: pointer;
  transition: all 0.2s ease;
  font-size: 0.875rem;
}

.expand-toggle:hover {
  background: rgba(51, 65, 85, 0.5);
  color: #e2e8f0;
  border-color: rgba(100, 116, 139, 0.5);
}

.expanded-streams {
  margin-top: 1rem;
  display: grid;
  gap: 1rem;
  animation: expandIn 0.3s ease-out;
}

@keyframes expandIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.mind-stream {
  background: rgba(30, 41, 59, 0.3);
  border: 1px solid rgba(100, 116, 139, 0.2);
  border-radius: 0.75rem;
  padding: 1rem;
  position: relative;
  overflow: hidden;
}

.analytical-stream {
  border-left: 3px solid #3b82f6;
}

.intuitive-stream {
  border-left: 3px solid #8b5cf6;
}

.stream-header {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 0.75rem;
}

.stream-header h4 {
  margin: 0;
  font-size: 1rem;
  color: #e2e8f0;
}

.stream-tag {
  margin-left: auto;
  font-size: 0.75rem;
  color: #64748b;
  font-style: italic;
}

.stream-content {
  color: #cbd5e1;
  line-height: 1.6;
  font-size: 0.9375rem;
}

.integration-insights {
  background: rgba(16, 185, 129, 0.1);
  border: 1px solid rgba(16, 185, 129, 0.3);
  border-radius: 0.75rem;
  padding: 1rem;
}

.insights-header {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 0.75rem;
  color: #10b981;
}

.insights-header h4 {
  margin: 0;
  font-size: 1rem;
}

.insights-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.insights-list li {
  padding: 0.25rem 0;
  color: #a7f3d0;
  font-size: 0.875rem;
  padding-left: 1.25rem;
  position: relative;
}

.insights-list li::before {
  content: 'â€¢';
  position: absolute;
  left: 0;
  color: #10b981;
}

.message-actions {
  margin-top: 1rem;
  display: flex;
  gap: 0.5rem;
}

.regenerate-btn {
  background: rgba(59, 130, 246, 0.1);
  border: 1px solid rgba(59, 130, 246, 0.3);
  color: #60a5fa;
  padding: 0.375rem 0.75rem;
  border-radius: 0.375rem;
  font-size: 0.75rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.regenerate-btn:hover {
  background: rgba(59, 130, 246, 0.2);
  border-color: rgba(59, 130, 246, 0.5);
}

@keyframes messageSlideIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
}

/* Fix for container visibility */
.enhanced-research-tab {
  min-height: 100%;
  overflow: auto;
}
