    // Catch-all for SPA routing - MUST BE AFTER ALL API ROUTES
    app.get('*', (req, res) => {
      if (!req.path.startsWith('/api')) {
        res.sendFile(path.join(process.cwd(), 'app-public', 'index.html'));
      } else {
        res.status(404).json({ error: 'API endpoint not found' });
      }
    });
