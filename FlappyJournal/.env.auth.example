# Keycloak Configuration
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=featherweight
KEYCLOAK_CLIENT_ID=featherweight-app
KEYCLOAK_CLIENT_SECRET=your-client-secret
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin-secret-password
KEYCLOAK_DB_PASSWORD=keycloak-secret-password
KEYCLOAK_HOSTNAME=localhost
KEYCLOAK_PORT=8443
KEYCLOAK_FRONTEND_URL=http://localhost:8080

# Kong API Gateway Configuration
KONG_ADMIN_URL=http://localhost:8001
KONG_PROXY_URL=http://localhost:8000
KONG_DB_PASSWORD=kong-secret-password

# Redis Configuration (for session storage)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis-secret-password

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=2592000

# Application URLs
APP_BACKEND_URL=http://localhost:5000
APP_FRONTEND_URL=http://localhost:3000

# Database Configuration (if different from main app)
AUTH_DATABASE_URL=postgres://username:password@localhost:5432/featherweight

# Social Login Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# MFA Configuration
MFA_ISSUER=Featherweight Journal
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret
CORS_ORIGINS=http://localhost:3000,https://app.featherweight.ai
SECURE_COOKIES=false

# Monitoring and Logging
LOG_LEVEL=info
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
